void display_status(std::vector<char> incorrect, std::string answer)
{
    std::cout << "Incorrect Guesses: \n";
    for(int i = 0; i < incorrect.size(); i++)
    {
      std::cout << incorrect[i] << " ";
    }
    std::cout << "\nCodeword: \n";
    for(int j = 0; j < answer.size(); j++)
    {
      std::cout << answer[j] << " ";
    }
    std::cout << "\n";
}
